<div class="container">
  <div class="row">
    <div class="col">
      <h1> Let a review to the restaurant </h1>

      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

