<div class="container">
  <div class="row">
    <div class="col">
      <h1>Create a new restaurant</h1>

      <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORY %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>

      <%= link_to "Back to the home", restaurants_path %>

    </div>
  </div>
</div>
