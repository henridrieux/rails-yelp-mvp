<div class="container">
  <div class="row">
    <div class="col">
      <h1>La liste des restaurants</h1>
        <ul>
          <% @restaurants.each do |restaurant| %>
            <div>
              <%= link_to restaurant.name, restaurant_path(restaurant) %>
            </div>
          <% end %>
        </ul>
        <hr>
        <%= link_to "Ajouter un restaurant", new_restaurant_path %>
    </div>
  </div>
</div>
